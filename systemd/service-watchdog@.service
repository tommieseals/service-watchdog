[Unit]
Description=Service Watchdog - %i configuration
Documentation=https://github.com/tommieseals/service-watchdog
After=network.target

[Service]
Type=simple
User=root
Group=root

# Main command with instance-specific config
ExecStart=/usr/local/bin/service-watchdog run -c /etc/service-watchdog/%i.yaml

# Graceful shutdown
ExecStop=/bin/kill -SIGTERM $MAINPID
TimeoutStopSec=30

# Restart policy
Restart=on-failure
RestartSec=10

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=service-watchdog-%i

# Security hardening
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=true
PrivateTmp=true
ReadWritePaths=/var/log/service-watchdog /var/lib/service-watchdog /var/run

# Environment
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
