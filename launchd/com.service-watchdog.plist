<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.service-watchdog</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/service-watchdog</string>
        <string>run</string>
        <string>-c</string>
        <string>/usr/local/etc/service-watchdog/config.yaml</string>
    </array>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
    </dict>
    
    <key>ThrottleInterval</key>
    <integer>10</integer>
    
    <key>StandardOutPath</key>
    <string>/var/log/service-watchdog/stdout.log</string>
    
    <key>StandardErrorPath</key>
    <string>/var/log/service-watchdog/stderr.log</string>
    
    <key>WorkingDirectory</key>
    <string>/var/lib/service-watchdog</string>
    
    <key>EnvironmentVariables</key>
    <dict>
        <key>PYTHONUNBUFFERED</key>
        <string>1</string>
    </dict>
</dict>
</plist>
